                </p>
            </div>

            <div id="post">
                <% for(var i= 0; i < data.docs.length; i++){%>
                    <div>
                        <div class="imageDiv" class="anchors">
                            <a class="images" href="/post/<%= data.docs[i]._id %>">
                            <img class="images" src="/images/<%= data.docs[i].Image %>" alt="post Image">
                            </a>
                        </div>
                        <p class="postTitle"><a href="/category/<%= data.docs[i].category %>">
                            <%= data.docs[i].category %>
                        </a></p>
                        <p class="postContent"><a href="/post/<%= data.docs[i]._id %>">
                            <%= data.docs[i].Headline %>
                        </a></p>
                        <p class="postDate"><%= data.docs[i].postDate.toDateString() %></p>
                    </div>
                <%}%>
            </div>

            <div id="pagination">
                <ul class="pagination">
                    <li id="prev"><a id="previous">Prev page</a></li>
                    <% for(var i = 0; i < data.pages; i++){ %>
                        <li><a class="pages" id="<%= i+ 1 %>" href="/category/<%= data.docs[0].category %>/page=<%= i + 1 %>">
                            <%= i + 1 %>
                        </a></li>
                    <% } %>
                    <li><a id="nxt" href="">Next page</a></li>
                    <li class="next" id="<%= data.pages %>" style="display: none;"></li>

                </ul>
            </div>
        </main>
